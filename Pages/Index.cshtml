@page
@model MetricsApp.Pages.IndexModel
@{
    ViewData["Title"] = "Metrics Dashboard";
}

@section Styles {
    <style>
        /* Add any page-specific styles here if needed */
        .kpi-card .icon { /* Style for icons in KPI cards */
            margin-right: 0.75rem;
        }
        #metricsTable th, #metricsTable td {
            vertical-align: middle;
        }
    </style>
}

<div class="columns is-multiline kpi-grid mb-5">
    <div class="column is-one-quarter-desktop is-half-tablet">
        <div class="card metric-card">
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <span class="icon is-large has-text-primary">
                            <i class="fas fa-wave-square fa-2x"></i>
                        </span>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-weight-semibold metric-card-title" id="kpiTotalMetrics">Loading...</p>
                        <p class="subtitle is-6 metric-card-description">Total Metrics</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column is-one-quarter-desktop is-half-tablet">
        <div class="card metric-card">
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <span class="icon is-large has-text-info">
                            <i class="fas fa-server fa-2x"></i>
                        </span>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-weight-semibold metric-card-title" id="kpiUniqueServers">Loading...</p>
                        <p class="subtitle is-6 metric-card-description">Unique Servers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column is-one-quarter-desktop is-half-tablet">
        <div class="card metric-card">
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <span class="icon is-large has-text-success">
                            <i class="fas fa-tags fa-2x"></i>
                        </span>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-weight-semibold metric-card-title" id="kpiUniqueMetricTypes">Loading...</p>
                        <p class="subtitle is-6 metric-card-description">Unique Metric Types</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column is-one-quarter-desktop is-half-tablet">
        <div class="card metric-card">
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <span class="icon is-large has-text-warning">
                            <i class="fas fa-clock fa-2x"></i>
                        </span>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-weight-semibold metric-card-title" id="kpiLastMetricTime">Loading...</p>
                        <p class="subtitle is-6 metric-card-description">Last Metric Received</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="columns is-multiline">
<div class="column is-full">
    <div class="box chart-container">
        <h2 class="title is-5">Filters</h2>
        <div class="columns is-multiline is-variable is-2">
            <div class="column is-half-tablet is-one-quarter-desktop">
                <div class="field">
                    <label class="label" for="serverNameFilter">Server Name</label>
                    <div class="control">
                        <input class="input" type="text" id="serverNameFilter" placeholder="e.g., PROD-WEB-01">
                    </div>
                </div>
            </div>
            <div class="column is-half-tablet is-one-quarter-desktop">
                <div class="field">
                    <label class="label" for="environmentFilter">Environment</label>
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select id="environmentFilter">
                                <option value="">All</option>
                                <option value="Production">Production</option>
                                <option value="QA">QA</option>
                                <option value="Development">Development</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-half-tablet is-one-quarter-desktop">
                <div class="field">
                    <label class="label" for="metricTypeFilter">Metric Type</label>
                    <div class="control">
                        <input class="input" type="text" id="metricTypeFilter" placeholder="e.g., CPUUsage">
                    </div>
                </div>
            </div>
            <div class="column is-half-tablet is-one-quarter-desktop">
                <div class="field">
                    <label class="label" for="startDateFilter">Start Date</label>
                    <div class="control">
                        <input class="input" type="date" id="startDateFilter">
                    </div>
                </div>
            </div>
            <div class="column is-half-tablet is-one-quarter-desktop">
                <div class="field">
                    <label class="label" for="endDateFilter">End Date</label>
                    <div class="control">
                        <input class="input" type="date" id="endDateFilter">
                    </div>
                </div>
            </div>
            <div class="column is-full-tablet is-half-desktop">
                <div class="field is-grouped is-grouped-right">
                    <div class="control">
                        <button class="button is-link" id="applyFilters">
                            <span class="icon"><i class="fas fa-filter"></i></span>
                            <span>Apply Filters</span>
                        </button>
                    </div>
                    <div class="control">
                        <button class="button is-light" id="clearFilters">
                            <span class="icon"><i class="fas fa-times"></i></span>
                            <span>Clear Filters</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="columns is-multiline">
    <div class="column is-full">
        <div class="box chart-container">
            <h3 class="title is-5">Metric Timeline</h3>
            <div id="chartMetricTimeline"></div>
        </div>
    </div>
    <div class="column is-half-desktop">
        <div class="box chart-container">
            <h3 class="title is-5">Metrics by Environment</h3>
            <div id="chartEnvironmentDistribution"></div>
        </div>
    </div>
    <div class="column is-half-desktop">
        <div class="box chart-container">
            <h3 class="title is-5">Top Metric Types</h3>
            <div id="chartMetricsByType"></div>
        </div>
    </div>
    <div class="column is-full"> <div class="box chart-container">
            <h3 class="title is-5">Top Servers by Metric Count</h3>
            <div id="chartMetricsByServer"></div>
        </div>
    </div>
</div>

<div class="box data-table-container mt-5">
    <h2 class="title is-5">Detailed Metrics</h2>
    <div class="table-container">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth" id="metricsTable">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Server Name</th>
                    <th>Environment</th>
                    <th>Metric Type</th>
                    <th>Value</th>
                    <th>Source</th>
                </tr>
            </thead>
            <tbody id="metricsTableBody">
                <tr><td colspan="6" class="has-text-centered">Loading metrics...</td></tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/js/metrics.js" asp-append-version="true"></script>
}