@page
@model MetricsApp.Pages.IndexModel
@{ ViewData["Title"] = "Server Metrics"; }

<div class="container mt-4">
    <h1>Server Metrics Dashboard</h1>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="serverNameFilter" class="form-label">Server Name</label>
            <input type="text" id="serverNameFilter" class="form-control" placeholder="e.g., PROD-WEB-01">
        </div>
        <div class="col-md-3">
            <label for="environmentFilter" class="form-label">Environment</label>
            <select id="environmentFilter" class="form-select">
                <option value="">All</option>
                <option value="QA">QA</option>
                <option value="Production">Production</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="metricTypeFilter" class="form-label">Metric Type</label>
            <input type="text" id="metricTypeFilter" class="form-control" placeholder="e.g., CPUUsage">
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button id="applyFilters" class="btn btn-primary me-2">Apply Filters</button>
            <button id="clearFilters" class="btn btn-secondary">Clear Filters</button>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="startDateFilter" class="form-label">Start Date</label>
            <input type="datetime-local" id="startDateFilter" class="form-control">
        </div>
        <div class="col-md-3">
            <label for="endDateFilter" class="form-label">End Date</label>
            <input type="datetime-local" id="endDateFilter" class="form-control">
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Timestamp</th>
                <th>Server Name</th>
                <th>Environment</th>
                <th>Metric Type</th>
                <th>Value</th>
                <th>Source</th>
            </tr>
        </thead>
        <tbody id="metricsTableBody">
            <!-- Metrics data will be loaded here by JavaScript -->
            <tr>
                <td colspan="6" class="text-center">Loading metrics...</td>
            </tr>
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="~/js/metrics.js"></script>
}
