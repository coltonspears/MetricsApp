@page
@model MetricsApp.Pages.IndexModel
@{ ViewData["Title"] = "Server Metrics Dashboard"; }

<div class="container-fluid mt-4">
    <h1 class="mb-4">Server Metrics Dashboard</h1>

    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="serverNameFilter" class="form-label">Server Name</label>
                    <input type="text" id="serverNameFilter" class="form-control" placeholder="e.g., PROD-WEB-01">
                </div>
                <div class="col-md-3">
                    <label for="environmentFilter" class="form-label">Environment</label>
                    <select id="environmentFilter" class="form-select">
                        <option value="">All</option>
                        <option value="QA">QA</option>
                        <option value="Production">Production</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="metricTypeFilter" class="form-label">Metric Type</label>
                    <input type="text" id="metricTypeFilter" class="form-control" placeholder="e.g., CPUUsage">
                </div>
                <div class="col-md-3">
                    <label for="startDateFilter" class="form-label">Start Date</label>
                    <input type="datetime-local" id="startDateFilter" class="form-control">
                </div>
                <div class="col-md-3">
                    <label for="endDateFilter" class="form-label">End Date</label>
                    <input type="datetime-local" id="endDateFilter" class="form-control">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button id="applyFilters" class="btn btn-primary me-2">Apply Filters</button>
                    <button id="clearFilters" class="btn btn-secondary">Clear Filters</button>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs Row -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Metrics</h5>
                    <p class="card-text fs-4" id="kpiTotalMetrics">-</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Unique Servers</h5>
                    <p class="card-text fs-4" id="kpiUniqueServers">-</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Unique Metric Types</h5>
                    <p class="card-text fs-4" id="kpiUniqueMetricTypes">-</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Last Metric Received</h5>
                    <p class="card-text fs-4" id="kpiLastMetricTime">-</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Charts Row -->
    <div class="row mb-4 g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Metric Timeline (e.g., CPU Usage)</h5>
                </div>
                <div class="card-body">
                    <div id="chartMetricTimeline" style="min-height: 365px;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Metrics by Environment</h5>
                </div>
                <div class="card-body">
                    <div id="chartEnvironmentDistribution" style="min-height: 365px;"></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Secondary Charts Row -->
    <div class="row mb-4 g-3">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Metrics Count by Type</h5>
                </div>
                <div class="card-body">
                    <div id="chartMetricsByType" style="min-height: 350px;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Metrics Count by Server</h5>
                </div>
                <div class="card-body">
                    <div id="chartMetricsByServer" style="min-height: 350px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Metrics Table Section -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Detailed Metrics Data</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Timestamp</th>
                            <th>Server Name</th>
                            <th>Environment</th>
                            <th>Metric Type</th>
                            <th>Value</th>
                            <th>Source</th>
                        </tr>
                    </thead>
                    <tbody id="metricsTableBody">
                        <tr>
                            <td colspan="6" class="text-center">Loading metrics...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/js/metrics.js"></script>
}
