@page
@model MetricsApp.Pages.MetricsOverviewModel
@{ ViewData["Title"] = "Metrics Overview"; }

<div class="container mt-4">
    <h1 class="mb-4">Metrics Overview</h1>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Available Metric Types</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Metric Type</th>
                            <th>Quantity</th>
                            <th>Last Update Time</th>
                        </tr>
                    </thead>
                    <tbody id="metricsOverviewTableBody">
                        <tr>
                            <td colspan="3" class="text-center">Loading overview data...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/metricsOverview.js"></script>
}
