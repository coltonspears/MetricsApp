@page
@model MetricsApp.Pages.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Application settings will be managed here.</p>

    <div class="container" style="max-width: 600px; margin-top: 20px;">
        <form>
            <fieldset>
                <legend>General Settings</legend>
                <div class="form-group">
                    <label for="refreshInterval">Data Refresh Interval (seconds):</label>
                    <input type="number" class="form-control" id="refreshInterval" value="60">
                </div>
                <div class="form-group">
                    <label for="themeSelection">Theme:</label>
                    <select class="form-control" id="themeSelection">
                        <option>Light</option>
                        <option>Dark</option>
                        <option>System Default</option>
                    </select>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="enableNotifications">
                    <label class="form-check-label" for="enableNotifications">Enable Notifications</label>
                </div>
            </fieldset>

            <fieldset style="margin-top: 20px;">
                <legend>Alerting</legend>
                <div class="form-group">
                    <label for="cpuThreshold">CPU Usage Threshold (%):</label>
                    <input type="number" class="form-control" id="cpuThreshold" value="80">
                </div>
                <div class="form-group">
                    <label for="memoryThreshold">Memory Usage Threshold (MB):</label>
                    <input type="number" class="form-control" id="memoryThreshold" value="1024">
                </div>
            </fieldset>
            
            <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Save Settings</button>
        </form>
    </div>
</div>
